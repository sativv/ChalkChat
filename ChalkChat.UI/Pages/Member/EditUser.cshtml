@page
@model ChalkChat.UI.Pages.Member.EditUserModel
@{
}



<div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-3">
        <form method="post" style="display:flex; flex-direction:column;" class="">
            @if(Model.ErrorMessage != null)
            {
                <p class="text-danger">@Model.ErrorMessage</p>
            }
            <input type="text" placeholder="@Model.SignedInUsername" asp-for="newUsername" class="text-center" />
            <input type="password" placeholder="Old Password" asp-for="Password" class="mt-2 mb-2 text-center" />
            <input type="password" placeholder="New Password" asp-for="newPassword" class="mt-2 mb-2 text-center" />
            <input type="submit" value="Update Information" class="btn btn-warning" />
        </form>

    </div>

  
</div>
